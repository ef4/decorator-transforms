{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "baseUrl": "src",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "target": "es2020",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "noEmit": true,
    "sourceMap": true
  }
}
